<!--
XML Launch File Example for Chapter 5: ROS 2 Packages and Launch Files.

This example demonstrates an XML launch file that starts multiple nodes
with parameters, namespaces, and remappings.
-->

<launch>
  <!-- Declare launch arguments -->
  <arg name="namespace" default="robot1" description="Namespace for the nodes" />

  <!-- Simple talker node -->
  <node pkg="simple_package" exec="simple_talker" name="simple_talker" namespace="$(var namespace)" output="screen">
  </node>

  <!-- Simple listener node -->
  <node pkg="simple_package" exec="simple_listener" name="simple_listener" namespace="$(var namespace)" output="screen">
    <!-- Remap topics if needed -->
    <remap from="chatter" to="chatter" />
  </node>
</launch>