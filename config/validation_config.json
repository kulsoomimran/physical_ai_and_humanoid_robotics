{
  "cohere_model": "embed-multilingual-v2.0",
  "qdrant_collection": "rag-embeddings",
  "validation_thresholds": {
    "embedding_success_rate": 0.99,
    "storage_success_rate": 0.99,
    "retrieval_relevance": 0.95,
    "max_latency_ms": 500,
    "min_throughput_per_sec": 10,
    "p95_latency_ms": 750,
    "p99_latency_ms": 1000
  },
  "test_data": {
    "sample_texts": [
      "Artificial intelligence is transforming many industries with advanced machine learning algorithms.",
      "Natural language processing enables computers to understand human language patterns.",
      "Vector embeddings represent semantic meaning in high-dimensional mathematical spaces.",
      "Retrieval augmented generation combines search and generation for improved responses.",
      "Semantic similarity helps find related content across large document collections."
    ],
    "test_queries": [
      "What is artificial intelligence?",
      "How do vector embeddings work?",
      "Explain semantic similarity in NLP.",
      "What is retrieval augmented generation?",
      "How does machine learning transform industries?"
    ],
    "expected_urls": [
      "https://example.com/ai-introduction",
      "https://example.com/nlp-overview",
      "https://example.com/vector-embeddings",
      "https://example.com/rage-systems",
      "https://example.com/ml-industries"
    ]
  },
  "validation_settings": {
    "timeout_seconds": 30,
    "retry_attempts": 3,
    "batch_size": 96,
    "top_k_results": 5,
    "concurrent_threads": 5,
    "iterations_per_thread": 10,
    "time_limit_seconds": 30
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "handlers": [
      {
        "type": "console",
        "level": "INFO"
      },
      {
        "type": "file",
        "level": "DEBUG",
        "filename": "validation.log",
        "max_bytes": 10485760,
        "backup_count": 5
      }
    ]
  },
  "performance_monitoring": {
    "enable_profiling": true,
    "metrics_collection": true,
    "report_frequency_minutes": 5,
    "performance_alerts": {
      "latency_threshold_ms": 1000,
      "error_rate_threshold": 0.05,
      "throughput_threshold": 5
    }
  },
  "error_handling": {
    "graceful_degradation": true,
    "fallback_strategies": {
      "cohere_failure": "skip_embedding_validation",
      "qdrant_failure": "skip_storage_validation",
      "retrieval_failure": "return_empty_results"
    },
    "circuit_breaker": {
      "failure_threshold": 5,
      "timeout_seconds": 60
    }
  },
  "output_options": {
    "report_format": ["json", "csv", "summary"],
    "output_directory": "validation_reports",
    "include_visualizations": true,
    "preserve_raw_data": true
  }
}